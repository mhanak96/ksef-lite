{
  "name": "ksef-lite",
  "version": "2.6.0",
  "description": "Unofficial TypeScript/JavaScript client for Polish KSeF (Krajowy System e-Faktur) with FA(3) XML generation, submission helpers and QR support.",
  "license": "MIT",
  "author": "Mateusz Hanak contact@encodedlegal.com",
  "homepage": "https://github.com/mhanak96/ksef-lite#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mhanak96/ksef-lite.git"
  },
  "bugs": {
    "url": "https://github.com/mhanak96/ksef-lite/issues"
  },
  "keywords": [
    "ksef",
    "krajowy-system-e-faktur",
    "e-invoice",
    "e-faktura",
    "invoice",
    "poland",
    "fa3",
    "xml",
    "typescript",
    "javascript"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --runInBand",
    "prepack": "npm run build"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.11",
    "qrcode": "^1.5.4",
    "xml-crypto": "^6.1.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/qrcode": "^1.5.6",
    "@types/xml-crypto": "^1.4.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
